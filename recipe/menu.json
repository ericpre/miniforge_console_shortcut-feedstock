{
    "$schema": "https://schemas.conda.org/menuinst/menuinst-1-1-0.schema.json",
    "menu_name": "{{ DISTRIBUTION_NAME }}",
    "menu_items": [
        {
            "name": {
                "target_environment_is_base": "{{ DISTRIBUTION_NAME }} Prompt",
                "target_environment_is_not_base": "{{ DISTRIBUTION_NAME }} Prompt ({{ ENV_NAME }})"
            },
            "command": [
                "{{ PREFIX }}/bin/{{ DISTRIBUTION_NAME }}_prompt"
            ],
            "activate": false,
            "terminal": false,
            "icon": "{{ MENU_DIR }}/miniforge_console_shortcut.{{ ICON_EXT }}",
            "description": "Launches a terminal window with conda activated.",
            "platforms": {
                "win": {
                    "desktop": false,
                    "terminal_profile": "{{ DISTRIBUTION_NAME }} Prompt ({{ ENV_NAME }})",
                    "app_user_model_id": "ConsoleShortcut.CmdExe.{{ DISTRIBUTION_NAME }}.{{ ENV_NAME }}",
                    "command": [
                        "%WINDIR%\\System32\\cmd.exe",
                        "/K",
                        "{{ BASE_PREFIX }}\\Scripts\\activate.bat",
                        "{{ PREFIX }}"
                    ],
                    "working_dir": "{{ HOME }}"
                },
                "osx": {
                    "entitlements": [
                        "com.apple.security.automation.apple-events"
                    ]
                },
                "linux": null
            }
        }
    ]
}